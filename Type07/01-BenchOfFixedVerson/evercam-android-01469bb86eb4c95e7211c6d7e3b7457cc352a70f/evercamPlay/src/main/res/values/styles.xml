<resources> xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <!-- Color of the menu overflow icon-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolBarPopupTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/light_gray_background</item>
    </style>

    <style name="ToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="SignupFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Label style in scanning result list, default weight is 4-->
    <style name="ScanResultLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Dark text style-->
    <style name="DarkText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/evercam_text_dark</item>
    </style>

    <!-- Small dark text in scanning result list-->
    <style name="DarkTextSmall" parent="DarkText">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- PTZ control image view on click style -->
    <style name ="PtzImageButtonStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:padding">4dip</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Video player control menu item style -->
    <style name ="PlayControlImageButtonStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/play_button_background_selector</item>
    </style>

    <!-- The menu label style for float action button -->
    <style name="actionMenuLabelStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Navigation drawer top level style -->
    <style name="NavDrawerTopLevelStyle">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <!-- Material Design Navigation Drawer -->
    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_row_height</item>
        <item name="android:background">@drawable/nav_drawer_row_item_background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerRowItemIcon">
        <item name="android:layout_width">@dimen/nav_drawer_item_row_icon_size</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_row_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_icon_left</item>
        <item name="android:tint">@color/nav_drawer_item_icon_normal</item>
    </style>

    <style name="NavDrawerRowItemText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/evercam_text_dark</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_text_left</item>
    </style>

    <!-- White text styles-->
    <style name="Body2.White.Primary" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body1.White.Primary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- View camera details styles-->
    <style name="ViewCameraItemRowLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ViewCameraItemRowItemText">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ViewCameraItemRowItemValueText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ViewCameraTitleItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Add/Edit camera details styles-->
    <style name="AddEditCameraItemRowLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AddEditCameraItemRowItemText">
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AddEditCameraItemRowItemEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AddEditCameraItemRowItemEditText.Text">
        <item name="android:inputType">text</item>
    </style>

    <style name="AddEditCameraItemRowItemEditText.Number">
        <item name="android:inputType">number</item>
    </style>

    <style name="AddEditCameraPortStatusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <!-- Login-->
    <style name="LoginLinkText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@drawable/txt_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Browse saved images-->
    <style name="ControlButtonLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ControlButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center</item>
        <!-- Background with ripple animation-->
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Sharing -->
    <style name="SharingListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="SharingListItemImage">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="SharingListItemTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SharingListItemTextSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SharingListItemTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="SharingListItemStatusText" parent="SharingListItemTextTitle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="SharingEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>