<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.Widget.ConversationCountBadge" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/conversation_badge</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="AvatarListItemStyle">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="AvatarListItemTextStyle" parent="android:TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="AvatarListItemSubtitleStyle" parent="android:TextAppearance.Small" />

    <style name="AvatarBannerStyle">
        <item name="android:layout_width">@dimen/avatar_size_large</item>
        <item name="android:layout_height">@dimen/avatar_size_large</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AvatarBannerTextStyle" parent="android:TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="AvatarBannerSubtitleStyle" parent="android:TextAppearance.Small" />

    <style name="ContactInfoElementTextStyle" parent="android:TextAppearance.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DateHeader">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:background">@drawable/date_stamp</item>
    </style>

    <style name="PinnedHeader">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">true</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pinned_header_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ContactInfoItemCard">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="ContactInfoItemCardContent">
        <item name="android:padding">12dp</item>
    </style>

    <style name="TextAppearance.CommandMessage.Small" parent="android:TextAppearance.Small">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.CommandMessage" parent="android:TextAppearance">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.CommandMessage.Large" parent="android:TextAppearance.Large">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.GroupInfo.Title" parent="android:TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ReplyBar.Sender" parent="android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.ReplyBar.Text" parent="android:TextAppearance.Small">
    </style>

    <style name="AvatarListItemBadgeStyle">
        <item name="android:layout_marginLeft">@dimen/avatar_chat_margin_start</item>
        <item name="android:layout_height">@dimen/avatar_chat_size</item>
        <item name="android:layout_width">@dimen/avatar_chat_size</item>
    </style>

    <style name="AvatarListItemBadgeStyle.Top" parent="AvatarListItemBadgeStyle">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="AvatarListItemBadgeStyle.Bottom" parent="AvatarListItemBadgeStyle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextAppearance.RegisterConfirm.Phone" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>
