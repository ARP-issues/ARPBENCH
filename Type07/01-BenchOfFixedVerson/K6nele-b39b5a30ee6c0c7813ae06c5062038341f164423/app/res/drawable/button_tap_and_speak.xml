<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/buttonPressed" />

            <stroke android:width="1dp" android:color="@color/buttonStroke" />

            <corners android:radius="3dp" />

            <padding android:bottom="15dp" android:left="20dp" android:right="20dp" android:top="15dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/buttonNormalEnd" android:startColor="@color/buttonNormalStart" />

            <stroke android:width="1dp" android:color="@color/buttonStroke" />

            <corners android:radius="3dp" />

            <padding android:bottom="15dp" android:left="20dp" android:right="20dp" android:top="15dp" />
        </shape></item>

</selector>