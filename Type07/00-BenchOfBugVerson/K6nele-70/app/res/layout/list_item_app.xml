<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="fill"
    android:padding="@dimen/layoutMargin1">

    <ImageView
        android:id="@+id/itemAppIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cdAppIcon"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/itemAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/itemAppIcon"
        android:layout_toRightOf="@+id/itemAppIcon"
        android:singleLine="true"
        android:text="Google Maps for Android"
        android:textSize="@dimen/textSize3" />

    <TextView
        android:id="@+id/itemAppFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAppName"
        android:layout_toEndOf="@+id/itemAppIcon"
        android:layout_toRightOf="@+id/itemAppIcon"
        android:text="com.google.android.apps.maps.with.offline.maps.feature"
        android:textSize="@dimen/textSize2" />

    <TextView
        android:id="@+id/itemAppId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAppName"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="@dimen/textSize2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/itemAppCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/semi_transparent"
        android:padding="2dp"
        android:text="6576"
        android:textSize="@dimen/textSize2" />

    <TextView
        android:id="@+id/itemAppGrammarTargetLang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAppFname"
        android:text="Gmaps"
        android:textColor="@color/green1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/itemAppGrammar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAppGrammarTargetLang"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="http://kaljurand.github.com/Grammars/grammars/pgf/Tallinndirection.pgf"
        android:textColor="@color/orange1"
        android:textSize="@dimen/textSize2" />

    <TextView
        android:id="@+id/itemAppServer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAppGrammar"
        android:text="@string/defaultHttpServer"
        android:textColor="@color/orange"
        android:textSize="@dimen/textSize2" />

</RelativeLayout>