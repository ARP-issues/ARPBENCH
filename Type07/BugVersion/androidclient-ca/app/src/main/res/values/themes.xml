<resources>
    <!-- default theme selector -->
    <style name="Theme.Light" parent="Base.Theme.Light">
    </style>

    <!-- base theme selector -->
    <style name="Base.Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <!-- not working pre-Lollipop
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
         -->
        <item name="colorAccent">@color/app_accent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- base theme for dialog activities -->
    <style name="Theme.Light.Dialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <!-- not working pre-Lollipop
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        -->
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="Theme.Light.QuickReplyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <!-- not working pre-Lollipop
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        -->
        <item name="colorAccent">@color/app_accent</item>
    </style>

</resources>
